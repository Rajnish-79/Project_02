<% layout("./layouts/loginBoilerplate") %>
<body>
    <h3>All Places</h3>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let data of allPlaces){%>
            <a href="/login/allPlaces/<%= data._id%>" class="listing-link">
                <div class="card col">
                    <img src="<%=data.image%>" class="card-img-top" alt="listing image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text">
                        <b><%=data.title%></b><br>
                        <h6><%=data.description%></h6><br>
                        <b>Location:</b> <%=data.location%> <br>

                    </p>
                    </div>
                  </div>
            </a>
            
              <%}%>
      
    </div>
</body>